<h1>New Comment Form</h1>
<!-- include the partials header -->
<% include ../partials/header %>
<div class="container">
    <div class="row"></div>
        <h1 style="text-align: center;">Edit comment</h1>
        <div style="width: 30%; margin: 25px auto;">
        <!-- New Camp Form with 3 inputs -->
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <!-- Cancel creation by going back -->
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<!-- include the partials foter -->
<% include ../partials/foter %>